<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="@dimen/Alto_Popup"
    android:background="#e60d12"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecciona Cantidad"
        android:id="@+id/textView"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_above="@+id/cantidad"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp" />

    <NumberPicker
        android:layout_width="70dp"
        android:layout_height="120dp"
        android:id="@+id/cantidad"
        android:layout_gravity="center_horizontal"
        android:background="#ffffff"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgAniadir"
        android:background="@drawable/aniadir"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="17dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgCancelar"
        android:background="@drawable/cancelar"
        android:layout_alignTop="@+id/imgAniadir"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:clickable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Precio: 1,45"
        android:id="@+id/lblPrecio"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:layout_above="@+id/textView"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />
</RelativeLayout>
