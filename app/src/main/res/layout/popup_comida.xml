<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="400dp"
    android:background="#e60d12"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Introduzca Cantidad"
        android:id="@+id/textView"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_below="@+id/lblPrecio"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgAniadir"
        android:background="@drawable/aniadir"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="17dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgCancelar"
        android:background="@drawable/cancelar"
        android:layout_alignTop="@+id/imgAniadir"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:clickable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Precio: 1,45"
        android:id="@+id/lblPrecio"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:ems="10"
        android:id="@+id/txtCantidad"
        android:background="#ffffff"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:textColor="#ff0101"
        android:textSize="20dp"
        android:text="1"
        android:textAlignment="center"
        android:textStyle="bold"
        android:inputType="number"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seleccione Tamaño"
        android:id="@+id/lblTamaño"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_below="@+id/txtCantidad"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />

    <Spinner
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:id="@+id/cmbTamanio"
        android:background="#ffffff"
        android:layout_below="@+id/lblTamaño"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seleccione Extra"
        android:id="@+id/textView2"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_below="@+id/cmbTamanio"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp" />
    <Spinner
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:id="@+id/cmbExtra"
        android:background="#ffffff"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />

</RelativeLayout>
