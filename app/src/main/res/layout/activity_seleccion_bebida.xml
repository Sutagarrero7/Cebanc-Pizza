<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".DatosCliente"
    android:background="#fd1919"
    android:clickable="false">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="430dp"
        android:id="@+id/scrollView"
        android:clickable="false"
        android:fillViewport = "true"
        android:layout_alignRight="@+id/btnContinuar"
        android:layout_alignEnd="@+id/btnContinuar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/grid"
            android:columnCount="2"
            android:clickable="false">

            <ImageView
                android:layout_width="@dimen/Medidas_Fotos"
                android:layout_height="@dimen/Medidas_Fotos"
                android:id="@+id/imgBurn"
                android:layout_row="0"
                android:layout_column="0"
                android:background="@drawable/burn"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:contextClickable="false" />

            <ImageView
                android:layout_width="@dimen/Medidas_Fotos"
                android:layout_height="@dimen/Medidas_Fotos"
                android:id="@+id/imgCocaColaLigth"
                android:layout_row="0"
                android:layout_column="1"
                android:background="@drawable/cocacola_light"
                android:adjustViewBounds="true"
                android:clickable="true" />

            <ImageView
                android:layout_width="@dimen/Medidas_Fotos"
                android:layout_height="@dimen/Medidas_Fotos"
                android:id="@+id/imgCocaColaZero"
                android:layout_row="1"
                android:layout_column="0"
                android:background="@drawable/cocacola_zero"
                android:clickable="true" />

            <ImageView
                android:layout_width="@dimen/Medidas_Fotos"
                android:layout_height="@dimen/Medidas_Fotos"
                android:id="@+id/imgCocaCola"
                android:layout_row="1"
                android:layout_column="1"
                android:background="@drawable/cocalcola"
                android:adjustViewBounds="false"
                android:clickable="true" />
            <ImageView
                android:layout_width="@dimen/Medidas_Fotos"
                android:layout_height="@dimen/Medidas_Fotos"
                android:id="@+id/imgFantaLimon"
                android:layout_row="2"
                android:layout_column="0"
                android:background="@drawable/fanta_limon"
                android:clickable="true" />

            <ImageView
                android:layout_width="@dimen/Medidas_Fotos"
                android:layout_height="@dimen/Medidas_Fotos"
                android:id="@+id/imgFantaNaranja"
                android:layout_row="2"
                android:layout_column="1"
                android:background="@drawable/fanta_naranja"
                android:adjustViewBounds="false"
                android:clickable="true" />

            <ImageView
                android:layout_width="@dimen/Medidas_Fotos"
                android:layout_height="@dimen/Medidas_Fotos"
                android:id="@+id/imgMahou"
                android:layout_row="3"
                android:layout_column="0"
                android:background="@drawable/mahou"
                android:clickable="true" />/>

            <ImageView
                android:layout_width="@dimen/Medidas_Fotos"
                android:layout_height="@dimen/Medidas_Fotos"
                android:id="@+id/imgMahouSin"
                android:layout_row="3"
                android:layout_column="1"
                android:background="@drawable/mahou_sin"
                android:adjustViewBounds="false"
                android:clickable="true" />/>

            <ImageView
                android:layout_width="@dimen/Medidas_Fotos"
                android:layout_height="@dimen/Medidas_Fotos"
                android:id="@+id/imgNestea"
                android:layout_row="4"
                android:layout_column="0"
                android:background="@drawable/nestea"
                android:clickable="true" />/>

            <ImageView
                android:layout_width="@dimen/Medidas_Fotos"
                android:layout_height="@dimen/Medidas_Fotos"
                android:id="@+id/imgRedbull"
                android:layout_row="4"
                android:layout_column="1"
                android:background="@drawable/redbull"
                android:adjustViewBounds="false"
                android:clickable="true" />/>

            <ImageView
                android:layout_width="@dimen/Medidas_Fotos"
                android:layout_height="@dimen/Medidas_Fotos"
                android:id="@+id/img7nup"
                android:layout_row="5"
                android:layout_column="0"
                android:background="@drawable/siete_logo"
                android:clickable="true" />/>

            <ImageView
                android:layout_width="@dimen/Medidas_Fotos"
                android:layout_height="@dimen/Medidas_Fotos"
                android:id="@+id/imgSprite"
                android:layout_row="5"
                android:layout_column="1"
                android:background="@drawable/sprite_logo_"
                android:clickable="true" />/>



        </GridLayout>
    </ScrollView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continuar"
        android:id="@+id/btnContinuar_Bebidas"
        android:layout_below="@+id/scrollView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:clickable="true" />

</RelativeLayout>